@model List<CartItem>
@{
    ViewData["Title"] = "Votre panier";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Prix unitaire</th>
                        <th>Quantit√©</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="~/images/products/@item.Image" alt="@item.ProductName" style="width: 50px; height: 50px; object-fit: contain;" class="me-3">
                                    <div>
                                        <h6>@item.ProductName</h6>
                                        <small class="text-muted">@item.CategoryName</small>
                                    </div>
                                </div>
                            </td>
                            <td>@item.Prix.ToString("C")</td>
                            <td>
                                <form asp-action="UpdateQuantity" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="number" name="quantity" value="@item.Quantite" min="1" class="form-control form-control-sm" style="width: 70px;" onchange="this.form.submit()">
                                </form>
                            </td>
                            <td>@item.Total.ToString("C")</td>
                            <td>
                                <form asp-action="RemoveFromCart" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3">Total</th>
                        <th>@Model.Sum(x => x.Total).ToString("C")</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
        
        <div class="d-flex justify-content-between mt-4">
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Continuer mes achats
            </a>
            <div>
                <form asp-action="ClearCart" method="post" class="d-inline me-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Vider le panier
                    </button>
                </form>
                <a asp-controller="Order" asp-action="Checkout" class="btn btn-success">
                    <i class="bi bi-cart-check"></i> Passer la commande
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Votre panier est vide.
        </div>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i> Voir nos produits
        </a>
    }
</div>