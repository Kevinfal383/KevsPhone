@model List<CartItem>
@{
    ViewData["Title"] = "Finaliser la commande";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Adresse de livraison</h5>
                </div>
                <div class="card-body">
                    <form asp-action="ProcessOrder" method="post">
                        <div class="form-group mb-3">
                            <label for="adresseLivraison" class="form-label">Adresse complète</label>
                            <textarea id="adresseLivraison" name="adresseLivraison" class="form-control" rows="3" required></textarea>
                        </div>
                        
                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-circle"></i> Confirmer la commande
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Récapitulatif</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @item.ProductName
                                <span class="badge bg-primary rounded-pill">@item.Quantite</span>
                            </li>
                        }
                        <li class="list-group-item d-flex justify-content-between fw-bold">
                            <span>Total</span>
                            <span>@Model.Sum(x => x.Total).ToString("C")</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>