@model Product
@{
    ViewData["Title"] = Model.Nom;
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="~/images/products/@Model.Image" class="img-fluid rounded" alt="@Model.Nom">
        </div>
        <div class="col-md-6">
            <h2>@Model.Nom</h2>
            <p class="text-muted">Catégorie: @Model.Category.Nom</p>
            <hr>
            <p>@Model.Description</p>
            <h4 class="text-success my-4">@Model.Prix.ToString("C")</h4>
            
            <div class="d-flex align-items-center mb-4">
                <span class="me-3">Quantité:</span>
                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-flex">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <input type="number" name="quantity" value="1" min="1" max="@Model.Stock" class="form-control me-2" style="width: 80px;">
                    <button type="submit" class="btn btn-primary" @(Model.Stock <= 0 ? "disabled" : "")>
                        <i class="bi bi-cart-plus"></i> Ajouter au panier
                    </button>
                </form>
            </div>
            
            <div class="alert @(Model.Stock > 0 ? "alert-success" : "alert-danger")">
                @if (Model.Stock > 0)
                {
                    <span>En stock (@Model.Stock disponible(s))</span>
                }
                else
                {
                    <span>Rupture de stock</span>
                }
            </div>
            
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour aux produits
            </a>
        </div>
    </div>
</div>